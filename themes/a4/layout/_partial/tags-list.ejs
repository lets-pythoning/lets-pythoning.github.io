<div class="archive-list">
  <ul class="archive">

    <% var pageTagName = path.substring("tags/".length, path.indexOf("/index.html")) %>
    <span>ğŸ“Œ<i><%= pageTagName %></i></span>
      <% var tagsArray = eval('site.tags.data') %>
      <% var pageTagData %>
      <% for (let i = 0; i < tagsArray.length; i++) { 
        if(tagsArray[i].name == pageTagName) {
          pageTagData = tagsArray[i];
        }}
      %>
    
    <% var array = pageTagData.posts.data %>
    <% array.sort((a, b) => {
      if (a.date > b.date) {
        return -1;
      }
      if (a.date < b.date) {
        return 1;
      }
      return 0;
    }) 
  %>
  <% for (let i = 0; i < array.length; i++) { %>
    <% if (!('hide' in array[i]) || array[i].hide == false) {%>
        <li>
        <span class="archive-date"><%= date(array[i].date, "YYYY-MM-DD") %></span>
        <div class="archive-main">
            <a class="archive-title" href="<%- url_for(array[i].path) %>"><%= array[i].title %></a>
        </div>
        </li>
    <% } %>
  <% } %>
  </ul>
</div>

